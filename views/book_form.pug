extends layout

block content
  h1= title

  form(action="" method="post")
    .form-group
      label(for='title') Title: 
      input#title.form-control(
        type='text' name='title' placeholder='Name of book'
        required='true' value=(undefined===book ? '' : book.title)
      )
    .form-group
      label(for='author') Author:
      select#author.form-control(
        type='select' name="author" placeholder='Select author' required=true
      )
        - 
          authors.sort((a, b) => {
            const textA = a.family_name;
            const textB = b.family_name;
            return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;
          })
        for author in authors
          if book
            //- GET form, where book.author is an object(populate), and POST form, where it is a ObjectId
            option(value=author._id 
              selected=(
                (
                  author._id.toString()==book.author._id
                  || author._id.toString()==book.author
                ) ? 'selected' : false)
            ) #{author.name}
          else
            option(value=author._id) #{author.name}
    .form-group
      label(for='summary') Summary: 
      textarea#summary.form-control(
        type='textarea' name='summary' placeholder='Summary'
        rows='3' required='true'
      ) #{undefined===book ? '' : book.summary}
    .form-group
      label(for='isbn') ISBN: 
      input#isbn.form-control(
        type='text' name='isbn' placeholder='ISBN13'
        required='true' value=(undefined===book ? '' : book.isbn)
      )
    .form-group
      label Genre:
      div
        for genre in genres
          div(style='display: inline; padding-right: 10px')
            input.checkbox-input(
              type='checkbox' name='genre' id=genre.id
              value=genre.id checked=genre.checked
            )
            label(for=genre.id) #{genre.name}
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul(style='color: red;')
      for error in errors
        li= error.msg


