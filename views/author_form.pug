extends layout

block content
  h1= title

  form(action="" method="post")
    .form-group
      label(for="first_name") First Name:
      input#first_name.form-control(
        type="text" name="first_name" placeholder='first name'
        value=(author===undefined ? '' : author.first_name)
      )
      label(for='family_name') Family Name:
      input#family_name.form-control(
        type='text' name='family_name' placeholder='last name'
        value=(author===undefined ? '' : author.family_name)
      )
    .form-group
      label(for='date_of_birth') Date of Birth:
      input#date_of_birth.form-control(
        type='date' name='date_of_birth' placeholder='dd/mm/yyyy'
        value=(!author)?'':(!author.date_of_birth)?'':author.date_of_birth.toISOString().split('T')[0]
      )
    .form-group
      label(for='date_of_death') Date of Death:
      input#date_of_death.form-control(
        type='date' name='date_of_death'
        value=(!author)?'':(!author.date_of_death)?'':author.date_of_death.toISOString().split('T')[0]
      )
    button.btn.btn-primary(type="submit") Submit

  if errors
    ul 
      for error in errors
        li.text-danger error.msg